one-px(color1)
    position relative
    &::after
        position absolute
        left 0
        bottom 0
        width 100%
        height 1px
        background color1
        content ''
        @media screen and (-webkit-device-pixel-ratio:2) 
            transform scaleY(0.5)
        @media screen and (-webkit-device-pixel-ratio:3) 
            transform scaleY(0.3333333333333)
        @media screen and (-webkit-device-pixel-ratio:4) 
            transform scaleY(0.25)
  bg-img(name)
    @media screen and (-webkit-device-pixel-ratio:2)  
            background-image  url('../img/'+name+'@2x.png')
            background-size 100%
            background-repeat no-repeat
    @media screen and (-webkit-device-pixel-ratio:3)  
            background-image  url('../img/'+name+'@3x.png')
            background-size 100%
             background-repeat no-repeat
    .clearfix
        zoom 1
        &:after
            content ""
            display block
            clear both